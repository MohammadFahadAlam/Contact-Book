<!--                     />-->

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_profile" />


        <TextView
            android:id="@+id/id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="id"
            android:textSize="20sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:text="Mohammad falad Alam"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="126dp"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="50dp"
            android:text="fahad2021@gmail.com"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textIsSelectable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="80dp"
            android:text="Contact :"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/contact_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="80dp"
            android:text="01843704802"
            android:textColor="#0B9111"
            android:textSize="20sp"
            android:textIsSelectable="true"
            />

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/callbtn_style"
            android:elevation="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="115dp"
            android:text="Date :"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="115dp"
            android:text="20/06/2021"
            android:textColor="#3F51B5"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="115dp"
            android:text="Time :"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/current_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="115dp"
            android:text="03:36:45"
            android:textColor="#3F51B5"
            android:textSize="12sp" />


        <LinearLayout
            android:id="@+id/linierlayoutforbtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-15dp"
            android:layout_marginRight="-15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/update"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="73dp"
                android:background="@drawable/ic_update_btn"
                android:elevation="8dp"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_delete_btn"
                android:elevation="8dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>